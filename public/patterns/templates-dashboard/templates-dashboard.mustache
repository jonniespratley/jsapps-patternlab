<style>
 body {
  background: var(--mdc-theme-background);
}

:root {
  --mdc-theme-primary: #343a40;
  --mdc-theme-secondary: #343a40;
  --mdc-theme-background: #eee;
}

.color-option-1 {
  --mdc-theme-primary: #343a40;
  --mdc-theme-secondary: #23272c;
  --mdc-theme-background: #ececec;
}
.color-option-2 {
  --mdc-theme-primary: #fec44c;
  --mdc-theme-secondary: green;
  --mdc-theme-background: white;
}
.color-option-3 {
  --mdc-theme-primary: #fc4f54;
  --mdc-theme-secondary: green;
  --mdc-theme-background: white;
}

.app .menu-close {
  display: none;
}
.app.drawer--open .menu-open {
  display: none;
}
.app.drawer--open .menu-close {
  display: block;
}


.theme1 {
  --mdc-theme-primary: #19262d;
  --mdc-theme-secondary: green;
  --mdc-theme-background: white;
}

.demo-cell {
  background: white;
  border-radius: 5px;
  min-height: 100px;
}

.mdc-paper {
  background: white;
}

.avatar {
  height: 30px;
  border-radius: 50%;
}


.app,
.mdc-drawer__content {
  height: 100vh;
}

.drawer-header-flex {
  display: inline-flex;
  flex: 1 1 auto;
  box-sizing: border-box;
}

.flex {
  display: flex;
}

