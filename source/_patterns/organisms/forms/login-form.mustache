  <form action="{{action}}">
    <div class="mdc-text-field mdc-text-field--box username mdc-text-field--upgraded mdc-ripple-upgraded">
      <input type="text" class="mdc-text-field__input" id="username-input" name="username" required="">
      <label class="mdc-floating-label" for="username-input">Username</label>
      <div class="mdc-line-ripple"></div>
    </div>
    <div class="mdc-text-field mdc-text-field--box password mdc-text-field--upgraded mdc-ripple-upgraded">
      <input type="password" class="mdc-text-field__input" id="password-input" name="password" required="" minlength="8">
      <label class="mdc-floating-label" for="password-input">Password</label>
      <div class="mdc-line-ripple"></div>
    </div>
    <div class="button-container">
      <button type="button" class="mdc-button cancel mdc-ripple-upgraded">
        Cancel
      </button>
      <button class="mdc-button mdc-button--raised next mdc-ripple-upgraded">
        Next
      </button>
    </div>
  </form>
  <style>
  .username, .password {
    display: block;
    width: 300px;
    margin: 20px auto;
}
  </style>

<script>
const {MDCTextField, MDCRipple} = window.mdc;
const username = new MDCTextField(document.querySelector('.username'));
const password = new MDCTextField(document.querySelector('.password'));

new MDCRipple(document.querySelector('.cancel'));
new MDCRipple(document.querySelector('.next'));
</script>