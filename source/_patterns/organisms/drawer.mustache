      <a class="mdc-list-item" href="{{path}}">
        <i class="material-icons mdc-list-item__graphic" aria-hidden="true">{{icon}}</i>
        <span>{{label}}</span>
      </a>
    {{/menu}}
    </div>
  </nav>
