<style>
    .collapsible {
        height: auto;
        
        transition: height 1s;
    }

    .collapsible .collapsible__close-icon {
        display: none;
    }

    .collapsible .collapsible__open-icon {
        display: block;
    }

    .collapsible--is-open .collapsible__open-icon {
        display: none;
    }

    .collapsible--is-open .collapsible__close-icon {
        display: block !important;
    }

    .collapsible a {
        text-decoration: none;
    }

    .collapsible__header {
        color: var(--px-headings-heading-subsection-color,#2c404c); 
        background-color: var(--px-headings-heading-subsection-background,rgba(136,154,165,.15));
    }

    .collapse {
        overflow: hidden;
        
        height: 0;
        padding: 0 !important;
    }

    .collapse--is-open {
        display: block;
        overflow: auto;
        height: auto;
        padding: auto;
    }
</style>
<div class="mdc-theme---bg mdc-typography collapsible">
    <div class="u-p- collapsible__header">
<a href="#" data-toggle="collapse" data-target="#collapse-1" class=" flex flex--spaced ">
        Collapse content
            <span class="mdc-list-item__meta material-icons collapsible__open-icon" aria-hidden="true">keyboard_arrow_down</span>
            <span class="mdc-list-item__meta material-icons collapsible__close-icon" aria-hidden="true">keyboard_arrow_up</span>
        </a>
        
    </div>
    <div id="collapse-1" class="collapse">
