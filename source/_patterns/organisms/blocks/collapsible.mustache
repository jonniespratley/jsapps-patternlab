    </div>
</div>
<script>
    var coll = document.querySelectorAll('[data-toggle="collapse"]');
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener('click', function (e) {
            this.classList.toggle('active');
            var content = document.querySelector(e.currentTarget.getAttribute('data-target'));
            this.parentElement.parentElement.classList.toggle('collapsible--is-open');
            content.classList.toggle('collapse--is-open');
            if (content.style.display === "block") {
