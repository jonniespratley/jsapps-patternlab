<div class="app-notifications">
  <div class="mdc-snackbar" aria-live="assertive" aria-atomic="true" aria-hidden="true">
    <p class="mdc-snackbar__text"></p>
    <div class="mdc-snackbar__action-wrapper">
      <button type="button" class="mdc-snackbar__action-button"></button>
    </div>
  </div>
</div>

<script>
  function toast(msg) {
    let snack = new mdc.snackbar.MDCSnackbar(document.querySelector('.mdc-snackbar')); console.log('snackbar', snack);
    snack.show(msg || {
      message: "This is a snackbar message",
      timeout: 3000,
      multiline: false,
      actionText: 'ACTION',
      actionOnBottom: true,
      actionHandler: function actionHandler() {
        console.log('my cool function');
      }
    });
  }
  document.addEventListener('DOMContentLoaded', toast());
</script>